<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dot_bg"
    tools:context=".view.BurstFight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SetterFight">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.ProtectorFight"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="32dp">

            <TextView
                android:id="@+id/roshanhp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/heroes_legend"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/heroes_legend"
                android:text="Roshan"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.812"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/heroes_legend"
                android:text="Burst"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.154"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heroHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/heroes_legend"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/heroMana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/heroes_legend"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/heroHp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/heroHp"
                app:layout_constraintTop_toBottomOf="@+id/heroHp" />

            <TextView
                android:id="@+id/hpheroside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/heroes_legend"
                android:text="HP:"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/heroHp"
                app:layout_constraintTop_toTopOf="@+id/heroHp" />

            <TextView
                android:id="@+id/herodamage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:fontFamily="@font/heroes_legend"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/heroMana"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/heroMana"
                app:layout_constraintTop_toBottomOf="@+id/heroMana" />

            <TextView
                android:id="@+id/mana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="MP:"
                android:fontFamily="@font/heroes_legend"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/hpheroside"
                app:layout_constraintTop_toBottomOf="@+id/hpheroside" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/heroes_legend"
                android:text="Damage:"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/herodamage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/heroes_legend"
                android:text="HP:"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/roshanhp"
                app:layout_constraintTop_toTopOf="@+id/roshanhp" />

            <Button
                android:id="@+id/back2"
                android:layout_width="73dp"
                android:layout_height="36dp"
                android:layout_marginBottom="288dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/heroes_legend"
                android:text="BACK"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintStart_toEndOf="@+id/textView5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="386dp"
                android:layout_height="257dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/roshan" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="219dp"
                android:layout_height="156dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/carry_burst" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>