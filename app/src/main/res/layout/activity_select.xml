<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dot_bg"
    tools:context=".view.Select">

    <Button
        android:id="@+id/burstb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        android:text="Burst"
        android:fontFamily="@font/heroes_legend"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Carry Class"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/setterb"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/protectorb"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saviorb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="168dp"
        android:text="Savior"
        android:fontFamily="@font/heroes_legend"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/setterb"
        app:layout_constraintTop_toTopOf="@+id/setterb" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:text="Healer Class"
        android:fontFamily="@font/heroes_legend"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/wizardb"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/disablerb"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hardcarryb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/heroes_legend"
        android:lineSpacingExtra="8sp"
        android:text="Hard Carry"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/protectorb"
        app:layout_constraintTop_toTopOf="@+id/protectorb" />

    <Button
        android:id="@+id/regeneratorb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Regenerator"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/disablerb"
        app:layout_constraintTop_toTopOf="@+id/disablerb" />

    <Button
        android:id="@+id/protectorb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Protector"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <Button
        android:id="@+id/wizardb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="48dp"
        android:text="Wizard"
        android:fontFamily="@font/heroes_legend"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/disablerb"
        app:layout_constraintTop_toTopOf="@+id/disablerb" />

    <Button
        android:id="@+id/setterb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="44dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Setter"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/protectorb"
        app:layout_constraintTop_toTopOf="@+id/protectorb" />

    <Button
        android:id="@+id/disablerb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="128dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Disabler"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@+id/setterb"
        app:layout_constraintTop_toTopOf="@+id/setterb" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Choose a character"
        android:textColor="#FFFFFF"
        android:textSize="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Tank Class"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/setterb"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/protectorb"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/heroes_legend"
        android:text="Mage Class"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/wizardb"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/disablerb"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>