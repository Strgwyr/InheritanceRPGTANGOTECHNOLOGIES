<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Select">

    <Button
        android:id="@+id/protectorb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        android:text="Protector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <Button
        android:id="@+id/wizardb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="48dp"
        android:text="Wizard"
        app:layout_constraintStart_toEndOf="@+id/disablerb"
        app:layout_constraintTop_toTopOf="@+id/disablerb" />

    <Button
        android:id="@+id/setterb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="44dp"
        android:text="Setter"
        app:layout_constraintStart_toEndOf="@+id/protectorb"
        app:layout_constraintTop_toTopOf="@+id/protectorb" />

    <Button
        android:id="@+id/disablerb"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_marginStart="128dp"
        android:text="Disabler"
        app:layout_constraintStart_toEndOf="@+id/setterb"
        app:layout_constraintTop_toTopOf="@+id/setterb" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Choose a character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>